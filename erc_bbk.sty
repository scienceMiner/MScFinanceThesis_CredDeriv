%% Maketitle - stretch title spacing
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\renewcommand \@maketitle{%
    \newpage%
    \null%
    \vspace*{5em}%
    \renewcommand{\baselinestretch}{2.5}\small\normalsize
    \begin{center}%
        {\huge \bfseries \@title}\\[5em]%
        {\Large \itshape \@author}\\%
    \end{center}%
    \renewcommand{\baselinestretch}{1.5}\small\normalsize
    \vfill%
    \begin{center}%
    A dissertation submitted in partial fulf\/illment \\
    of the requirements for the degree of \\
    \textbf{\@degree@string} \\
    of the \\
    \textbf{University of London}.
    \end{center}%
    \vspace{2em}%
    \begin{center}%
    School of Economics, Mathematics and Statistics \\
    Birkbeck College
    \end{center}%
    \vspace{2em}%
    \begin{center}%
    \@date%
    \end{center}%
}

% introduced Sept 17 98 to create right aligned chapter heads
\renewcommand \@makechapterhead[1]{%
    \vspace*{40\p@}%
    {\parindent \z@%
     \raggedright%
     \reset@font%
     \ifnum \c@secnumdepth >\m@ne%
         \if@mainmatter%
             \huge \bfseries \hrulefill \rule{0.03cm}{0cm} {\sc \@chapapp{} \thechapter}%
     \par%
             \vskip 20\p@%
         \fi%
     \fi%
     \huge \bfseries #1%
     \par%
     \nobreak%
     \vskip 40\p@%
    }%
}

\renewcommand \@makeschapterhead[1]{%
    \vspace*{50\p@}%
    {\parindent \z@%
     \raggedright%
     \reset@font%
     \huge \hrulefill \rule{0.03cm}{0cm} \bfseries {\sc #1}%
     \par%
     \nobreak%
     \vskip 40\p@%
    }%
}

